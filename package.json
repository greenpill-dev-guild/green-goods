{
  "name": "green-goods",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "keywords": [
    "green-goods",
    "green-goods-protocol",
    "pwa",
    "web3",
    "dapp",
    "ethereum",
    "solidity",
    "react",
    "tailwind",
    "typescript",
    "bun",
    "foundry"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "ci:local": "node scripts/ci-local.js",
    "prepare": "husky",

    "format": "npx @biomejs/biome format --write . && cd packages/contracts && forge fmt",
    "format:check": "npx @biomejs/biome format . && cd packages/contracts && forge fmt --check",
    "lint": "bun oxlint packages/client/src packages/admin/src packages/shared/src packages/indexer/src packages/agent/src packages/contracts/script && cd packages/contracts && bun run lint",

    "dev": "trap 'npx pm2 delete all' EXIT; npx pm2 start ecosystem.config.cjs && npx pm2 logs --raw",
    "dev:stop": "npx pm2 delete all",
    "dev:docs": "cd docs && bun start",
    "dev:client": "cd packages/client && bun run dev",
    "dev:admin": "cd packages/admin && bun run dev",
    "dev:agent": "cd packages/agent && bun run dev",
    "dev:indexer": "cd packages/indexer && bun run dev",
    "dev:contracts": "cd packages/contracts && bun run dev",

    "test": "bun run test:shared && bun run test:client && bun run test:admin && bun run test:indexer && bun run test:contracts && bun run test:agent",
    "test:e2e": "node scripts/test-e2e.js",
    "test:e2e:smoke": "node scripts/test-e2e.js smoke",
    "test:e2e:ui": "SKIP_WEBSERVER=true SKIP_HEALTH_CHECK=true playwright test --ui",
    "test:client": "cd packages/client && bun run test",
    "test:admin": "cd packages/admin && bun run test",
    "test:agent": "cd packages/agent && bun run test",
    "test:shared": "cd packages/shared && bun run test",
    "test:indexer": "cd packages/indexer && bun run test",
    "test:contracts": "cd packages/contracts && bun run test",

    "build": "bun run build:contracts && bun run build:shared && bun run build:indexer && bun run build:client && bun run build:admin",
    "build:docs": "cd docs && bun run build",
    "build:client": "cd packages/client && bun run build",
    "build:admin": "cd packages/admin && bun run build",
    "build:agent": "cd packages/agent && bun run build",
    "build:shared": "cd packages/shared && bun run build",
    "build:indexer": "cd packages/indexer && bun run build",
    "build:contracts": "cd packages/contracts && bun run build"
  },
  "overrides": {
    "multiformats": "^13.4.2",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "resolutions": {},
  "dependencies": {
    "@ensdomains/ens-contracts": "^1.6.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.16.0",
    "multiformats": "^13.4.2",
    "uint8arrays": "^5.1.0",
    "viem": "^2.43.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.4.0",
    "lint-staged": "16.1.5",
    "oxlint": "1.36.0",
    "pm2": "6.0.14",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-port": "1.1.0"
  },
  "engines": {
    "node": ">=20.x",
    "bun": ">=1.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "bash -c 'files=\"$@\"; filtered=$(echo \"$files\" | tr \" \" \"\\n\" | grep -v \"packages/contracts/out/\"); [ -n \"$filtered\" ] && echo \"$filtered\" | xargs npx @biomejs/biome format --write || true' --"
    ],
    "*.sol": [
      "forge fmt"
    ]
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "trustedDependencies": [
    "sharp"
  ]
}
