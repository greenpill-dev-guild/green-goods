{
  "name": "green-goods",
  "version": "0.0.0",
  "private": true,
  "keywords": [
    "green-goods",
    "green-goods-protocol",
    "pwa",
    "web3",
    "dapp",
    "ethereum",
    "solidity",
    "react",
    "tailwind",
    "typescript",
    "bun",
    "foundry"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "prepare": "husky",

    "dev": "trap 'bunx pm2 delete all' EXIT; bunx pm2 start ecosystem.config.js && bunx pm2 logs --raw",
    "dev:stop": "bunx pm2 delete all",
    "dev:client": "cd packages/client && bun run dev",
    "dev:admin": "cd packages/admin && bun run dev",
    "dev:indexer": "cd packages/indexer && bun run dev",
    "dev:contracts": "cd packages/contracts && bun run dev",

    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "oxlint packages/client/src packages/admin/src packages/shared/src packages/indexer/src packages/contracts/script",
    "test": "bun run test:client && bun run test:admin && bun run test:indexer && bun run test:contracts",

    "test:e2e": "playwright test",
    "test:client": "cd packages/client && bun run test",
    "test:admin": "cd packages/admin && bun run test",
    "test:indexer": "cd packages/indexer && bun run test",
    "test:contracts": "cd packages/contracts && bun run test",

    "build": "bun run build:contracts && bun run build:shared && bun run build:indexer && bun run build:client && bun run build:admin",
    "build:shared": "cd packages/shared && bun run build",
    "build:client": "cd packages/client && bun run build",
    "build:admin": "cd packages/admin && bun run build",
    "build:indexer": "cd packages/indexer && bun run build",
    "build:contracts": "cd packages/contracts && bun run build"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "16.1.5",
    "oxlint": "1.11.1",
    "pm2": "6.0.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "wait-port": "1.1.0"
  },
  "engines": {
    "node": ">=20.x",
    "bun": ">=1.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome format --write",
      "oxlint"
    ],
    "*.sol": [
      "cd packages/contracts && bun run format"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
