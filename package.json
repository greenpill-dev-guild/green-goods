{
  "name": "green-goods",
  "version": "0.0.0",
  "private": true,
  "keywords": [
    "green-goods",
    "green-goods-protocol",
    "pwa",
    "web3",
    "dapp",
    "ethereum",
    "solidity",
    "react",
    "tailwind",
    "typescript",
    "pnpm",
    "foundry"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "prepare": "husky",

    "dev": "trap 'pnpm exec pm2 delete all' EXIT; pnpm exec pm2 start ecosystem.config.js && pnpm exec pm2 logs --raw",
    "dev:stop": "pnpm exec pm2 delete all",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:admin": "pnpm --filter 'admin' run dev",
    "dev:indexer": "cd packages/indexer && pnpm run dev",
    "dev:contracts": "pnpm --filter 'contracts' run dev",

    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "oxlint packages/client/src packages/indexer/src packages/admin/src packages/contracts/script",
    "test": "pnpm recursive run test",
    "test:e2e": "playwright test",
    "test:client": "pnpm --filter 'client' run test",
    "test:admin": "pnpm --filter 'admin' run test",
    "test:indexer": "cd packages/indexer && pnpm run test",
    "test:contracts": "pnpm --filter 'contracts' run test",

    "build": "pnpm recursive run build",
    "build:client": "pnpm --filter 'client' run build",
    "build:admin": "pnpm --filter 'admin' run build",
    "build:indexer": "cd packages/indexer && pnpm run build",
    "build:contracts": "pnpm --filter 'contracts' run build",

    "deploy:contracts:dryrun": "pnpm --filter 'contracts' run deploy:dryrun",
    "deploy:contracts:testnet": "pnpm --filter 'contracts' run deploy:testnet",
    "deploy:contracts:celo": "pnpm --filter 'contracts' run deploy:celo",
    "deploy:contracts:arbitrum": "pnpm --filter 'contracts' run deploy:arbitrum"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.0"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "16.1.5",
    "oxlint": "1.11.1",
    "pm2": "6.0.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "wait-port": "1.1.0"
  },
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=9.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome format --write",
      "oxlint"
    ],
    "*.sol": [
      "pnpm --filter contracts format"
    ]
  }
}
