{
  "name": "@green-goods/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Green Goods development",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js --stdio",
    "start:http": "node build/index.js --http",
    "start:railway": "node build/index.js --http --port $PORT",
    "dev": "tsx src/index.ts",
    "dev:stdio": "tsx src/index.ts --stdio",
    "dev:http": "tsx src/index.ts --http",
    "test": "npm run build && node build/test.js",
    "railway:deploy": "railway up"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "octokit": "^3.1.2",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "lunr": "^2.3.9",
    "node-cache": "^5.1.2",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/lunr": "^2.3.7",
    "typescript": "^5.4.5",
    "tsx": "^4.7.1"
  },
  "engines": {
    "node": ">=18"
  }
}
