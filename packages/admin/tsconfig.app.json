{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": false,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo/app.tsbuildinfo",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@green-goods/shared": ["../shared/src/index.ts"],
      "@green-goods/shared/hooks": ["../shared/src/hooks/index.ts"],
      "@green-goods/shared/hooks/*": ["../shared/src/hooks/*/index.ts"],
      "@green-goods/shared/providers": ["../shared/src/providers/index.ts"],
      "@green-goods/shared/providers/*": ["../shared/src/providers/*.tsx"],
      "@green-goods/shared/modules": ["../shared/src/modules/index.ts"],
      "@green-goods/shared/modules/*": ["../shared/src/modules/*/index.ts"],
      "@green-goods/shared/utils": ["../shared/src/utils/index.ts"],
      "@green-goods/shared/utils/*": ["../shared/src/utils/*.ts"],
      "@green-goods/shared/config": ["../shared/src/config/index.ts"],
      "@green-goods/shared/config/*": ["../shared/src/config/*.ts"],
      "@green-goods/shared/types": ["../shared/src/types/index.ts"],
      "@green-goods/shared/types/*": ["../shared/src/types/*.ts"],
      "@green-goods/shared/stores": ["../shared/src/stores/index.ts"],
      "@green-goods/shared/stores/*": ["../shared/src/stores/*.ts"],
      "@green-goods/shared/mocks": ["../shared/src/mocks/index.ts"],
      "@green-goods/shared/mocks/browser/*": ["../shared/src/mocks/browser/*.ts"],
      "@green-goods/shared/mocks/server/*": ["../shared/src/mocks/server/*.ts"],
      "@green-goods/shared/i18n": ["../shared/src/i18n/index.ts"],
      "@green-goods/shared/i18n/*": ["../shared/src/i18n/*.json"],
      "@green-goods/shared/workflows": ["../shared/src/workflows/index.ts"],
      "@green-goods/shared/workflows/*": ["../shared/src/workflows/*.ts"],
      "@green-goods/shared/constants": ["../shared/src/constants/index.ts"]
    }
  },
  "include": ["src", "../../eas/src/resources/schemas.json", "../shared/src/types/**/*.d.ts"],
  "exclude": [
    "src/__tests__",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__mocks__",
    "../shared/src/__tests__/**",
    "../shared/src/__mocks__/**"
  ]
}
