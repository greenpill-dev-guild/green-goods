{
  "name": "contracts",
  "version": "0.0.8",
  "private": true,
  "descripticon": "Contracts for Green Goods Protocol",
  "scripts": {
    "chain": "anvil --config-out localhost.json",
    "compile": "forge compile",
    "dev": "forge build --via-ir",
    "format": "forge fmt",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "lint": "pnpm run format && pnpm run solhint",
    "build": "forge build --via-ir",
    "test": "pnpm run build && forge test -f https://eth-sepolia.g.alchemy.com/v2/i2qnBKk5GQ8pVGPLA-G3D9il5o0ULQO3 --gas-report",

    "fork": "node script/deploy.js fork",
    "fork:sepolia": "node script/deploy.js fork sepolia",
    "fork:arbitrum": "node script/deploy.js fork arbitrum",
    "fork:base": "node script/deploy.js fork base",
    "fork:celo": "node script/deploy.js fork celo",
    "fork:optimism": "node script/deploy.js fork optimism",

    "deploy": "node script/deploy.js core",
    "deploy:local": "node script/deploy.js core --network localhost --broadcast",
    "deploy:fork": "node script/deploy.js core --network localhost --broadcast",
    "deploy:dryrun": "node script/deploy.js core --network localhost",
    "deploy:sepolia": "node script/deploy.js core --network sepolia --broadcast --verify",
    "deploy:arbitrum": "node script/deploy.js core --network arbitrum --broadcast --verify",
    "deploy:base": "node script/deploy.js core --network base --broadcast --verify",
    "deploy:celo": "node script/deploy.js core --network celo --broadcast --verify",
    "deploy:optimism": "node script/deploy.js core --network optimism --broadcast --verify",

    "deploy:garden": "node script/deploy.js garden config/garden.json",
    "deploy:onboard": "node script/deploy.js onboard config/garden-onboarding-example.csv",
    "deploy:actions": "node script/deploy.js actions config/actions.json",
    "deployment:status": "node script/deploy.js status",

    "gas:check": "node script/deploy-helpers/gas-optimizer.js",
    "gas:monitor": "node script/deploy-helpers/gas-optimizer.js monitor"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-contracts": "1.7.1",
    "@openzeppelin/contracts-upgradeable": "4.9.6"
  },
  "devDependencies": {
    "@pinata/sdk": "^2.1.0",
    "@privy-io/server-auth": "latest",
    "@biomejs/biome": "2.0.0-beta.6",
    "@types/qrcode": "1",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.4.1",
    "envfile": "~6.18.0",
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0",
    "pinata": "^0.4.0",
    "qrcode": "~1.5.4",
    "solhint": "^5.0.5",
    "solidity-coverage": "^0.8.14",
    "toml": "~3.0.0"
  }
}
