{
  "name": "contracts",
  "version": "0.0.8",
  "private": true,
  "description": "Contracts for Green Goods Protocol",
  "scripts": {
    "dev": "anvil --config-out localhost.json",
    "lint": "forge fmt && solhint --config ./.solhint.json 'src/**/*.sol' 'script/**/*.sol' 'test/**/*.sol' --fix",
    "build": "forge build --via-ir",
    "test": "pnpm build && ARBITRUM_RPC_URL=http://localhost:8545 BASE_SEPOLIA_RPC_URL=http://localhost:8545 CELO_RPC_URL=http://localhost:8545 forge test --gas-report",

    "deploy": "node script/deploy.js core",
    "deploy:local": "node script/deploy.js core --network localhost --broadcast",
    "deploy:dryrun": "node script/deploy.js core --network baseSepolia",
    "deploy:testnet": "node script/deploy.js core --network baseSepolia --broadcast",
    "deploy:celo": "node script/deploy.js core --network celo --broadcast",
    "deploy:arbitrum": "node script/deploy.js core --network arbitrum --broadcast",

    "upgrade": "node script/upgrade.js",
    "upgrade:testnet": "node script/upgrade.js all --network baseSepolia --broadcast",
    "upgrade:celo": "node script/upgrade.js all --network celo --broadcast",
    "upgrade:arbitrum": "node script/upgrade.js all --network arbitrum --broadcast",

    "action": "node script/action-manager.js",

    "fork": "node script/deploy.js fork",
    "status": "node script/deploy.js status",
    "envio:local": "node script/utils/envio-integration.js enable-local",
    "envio:cleanup": "node script/utils/envio-integration.js cleanup"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-contracts": "^1.8.0",
    "@openzeppelin/contracts-upgradeable": "4.9.6"
  },
  "devDependencies": {
    "@pinata/sdk": "^2.1.0",
    "csv-parse": "^5.5.3",
    "envfile": "~6.18.0",
    "node-fetch": "^2.7.0",
    "solhint": "^5.0.5",
    "toml": "~3.0.0"
  }
}
