{
  "name": "@green-goods/contracts",
  "version": "0.4.0",
  "private": true,
  "description": "Contracts for Green Goods Protocol",
  "scripts": {
    "predev": "lsof -ti:8545 | xargs kill -9 2>/dev/null || true",
    "dev": "anvil --config-out localhost.json",
    "format": "forge fmt",
    "lint": "forge fmt && solhint --config ./.solhint.json 'src/**/*.sol' 'script/**/*.sol' 'test/**/*.sol' --fix",
    "build": "forge build",
    "build:core": "forge build --contracts src/tokens/Garden.sol src/resolvers/*.sol src/registries/Action.sol src/DeploymentRegistry.sol src/interfaces/*.sol src/lib/*.sol src/modules/*.sol",
    "build:fresh": "rm -rf out cache && forge build",
    "test": "ARBITRUM_RPC_URL=http://localhost:8545 BASE_SEPOLIA_RPC_URL=http://localhost:8545 CELO_RPC_URL=http://localhost:8545 forge test --no-match-contract 'E2E'",
    "test:fast": "forge test --no-match-contract 'E2E|Deploy'",
    "test:gas": "forge test --gas-report --no-match-contract 'E2E'",
    "test:match": "forge test --match-path",
    "test:e2e": "bun run build && forge test --match-contract 'E2EWorkflowTest' -vv && dotenv -e ../../.env -- forge test --match-contract 'E2EKarmaGAPForkTest' -vv",
    "test:e2e:workflow": "bun run build && forge test --match-contract 'E2EWorkflowTest' -vv",
    "test:e2e:karma": "bun run build && dotenv -e ../../.env -- forge test --match-contract 'E2EKarmaGAPForkTest' -vv",
    "test:e2e:testnet": "bun run build && dotenv -e ../../.env -- forge test --match-test 'testFork.*BaseSepolia' -vvv",
    "test:e2e:arbitrum": "bun run build && dotenv -e ../../.env -- forge test --match-test 'testFork.*Arbitrum' -vvv",
    "test:e2e:celo": "bun run build && dotenv -e ../../.env -- forge test --match-test 'testFork.*Celo' -vvv",
    "deploy": "bun script/deploy.ts core",
    "deploy:dry:mainnet": "bun script/deploy.ts core --network mainnet",
    "deploy:dry:testnet": "bun script/deploy.ts core --network baseSepolia",
    "deploy:dry:sepolia": "bun script/deploy.ts core --network sepolia",
    "deploy:dry:arbitrum": "bun script/deploy.ts core --network arbitrum",
    "deploy:dry:celo": "bun script/deploy.ts core --network celo",
    "deploy:mainnet": "bun script/deploy.ts core --network mainnet --broadcast",
    "deploy:sepolia": "bun script/deploy.ts core --network sepolia --broadcast",
    "deploy:testnet": "bun script/deploy.ts core --network baseSepolia --broadcast",
    "deploy:arbitrum": "bun script/deploy.ts core --network arbitrum --broadcast",
    "deploy:celo": "bun script/deploy.ts core --network celo --broadcast --update-schemas",
    "upgrade": "bun script/upgrade.ts",
    "upgrade:dry:mainnet": "bun script/upgrade.ts all --network mainnet",
    "upgrade:dry:sepolia": "bun script/upgrade.ts all --network sepolia",
    "upgrade:dry:testnet": "bun script/upgrade.ts all --network baseSepolia",
    "upgrade:dry:arbitrum": "bun script/upgrade.ts all --network arbitrum",
    "upgrade:dry:celo": "bun script/upgrade.ts all --network celo",
    "upgrade:mainnet": "bun script/upgrade.ts all --network mainnet --broadcast",
    "upgrade:sepolia": "bun script/upgrade.ts all --network sepolia --broadcast",
    "upgrade:testnet": "bun script/upgrade.ts all --network baseSepolia --broadcast",
    "upgrade:arbitrum": "bun script/upgrade.ts all --network arbitrum --broadcast",
    "upgrade:celo": "bun script/upgrade.ts all --network celo --broadcast",
    "status": "bun script/deploy.ts status",
    "envio:local": "bun script/utils/envio-integration.ts enable-local",
    "envio:cleanup": "bun script/utils/envio-integration.ts cleanup",
    "ipfs:upload": "bun script/utils/ipfs-uploader.ts",
    "ipfs:cache": "cat .ipfs-cache.json"
  },
  "dependencies": {
    "@ensdomains/ens-contracts": "^1.6.0",
    "@ethereum-attestation-service/eas-contracts": "^1.8.0",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@storacha/client": "^1.8.23",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "bun-types": "latest",
    "solhint": "^6.0.1"
  }
}
