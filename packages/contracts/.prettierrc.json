{
  "plugins": ["prettier-plugin-solidity"],
  "bracketSpacing": true,
  "printWidth": 120,
  "proseWrap": "always",
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false
      }
    }
  ]
}
