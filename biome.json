{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noTemplateCurlyInString": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "includes": [
      "**/packages/client/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/contracts/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/contracts/script/**/*.{ts,tsx,js,jsx}",
      "**/packages/eas/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/client/*.config.{ts,js}",
      "**/*.json",
      "!**/packages/contracts/out/**",
      "!**/packages/contracts/broadcast/**",
      "!**/packages/contracts/cache/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteProperties": "asNeeded",
      "attributePosition": "auto"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "includes": [
      "**/packages/client/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/contracts/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/contracts/script/**/*.{ts,tsx,js,jsx}",
      "**/packages/eas/src/**/*.{ts,tsx,js,jsx}",
      "**/packages/client/*.config.{ts,js}",
      "**/*.json",
      "!**/packages/contracts/out/**",
      "!**/packages/contracts/broadcast/**",
      "!**/packages/contracts/cache/**",
      "!.biomeignore",
      "!.gitignore"
    ]
  }
}
